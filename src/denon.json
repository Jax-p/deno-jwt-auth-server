{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run --allow-write --unstable --allow-env --allow-read --allow-plugin --allow-net -c tsconfig.json app.ts"
    },
    "cli": {
      "cmd": "deno run --unstable --allow-env --allow-read --allow-write --allow-plugin --allow-net -c tsconfig.json cli.ts"
    }
  },
  "watcher": {
    "exts": ["js", "ts"]
  }
}
